const emptyBrain = { 
    businessName: '', targetAudience: '', brandVoice: '', audiencePsychology: '', brandVoiceExamples: '', 
    productsServices: '', usp: '', keywords: '', programCatalog: '', contentPillars: '', socialMediaTactics: '', emailMarketingGoal: '', newSubscriberOffer: '', seasonalPromotions: '', quarterlyContentThemes: '',
    businessGoals: '', competitors: '', pricingStructure: '', businessGoalsQuantitative: '', competitiveAdvantage: '', customerJourney: '', longTermVision: '', biggestBusinessChallenges: '',
    bookingConversionData: '', customerData: '', performanceMetrics: '',
    websiteUrl: '', targetSearchCompetitors: '', contentStrategyFocus: '', businessLocation: '',
    faq: '', refundPolicy: '', supportTone: '',
    avgCostPerProgram: '', customerAcquisitionCost: '', monthlyFixedCosts: '',
    teachingPhilosophy: '', customerProgressionPath: '', availableEquipment: '',
    salesProcessOffers: '', negotiationParameters: ''
};

const emptyFirebaseConfig = { apiKey: "", authDomain: "", projectId: "", storageBucket: "", messagingSenderId: "", appId: "" };

// --- Main App Component ---
export default function App() {
    const [userDb, setUserDb] = useState(null);
    const [userStorage, setUserStorage] = useState(null);
    const [userId, setUserId] = useState(null);
    const [appState, setAppState] = useState('initializing'); // 'initializing', 'needs_config', 'ready', 'error'
    
    const [currentView, setCurrentView] = useState('dashboard');
    const [selectedAgent, setSelectedAgent] = useState(null);
    const [brainData, setBrainData] = useState(emptyBrain);
    const [chatHistory, setChatHistory] = useState([]);
    const [isLoading, setIsLoading] = useState(false);
    const [error, setError] = useState(null);
    const [sharedScratchpad, setSharedScratchpad] = useState({});
    const [contentCalendarData, setContentCalendarData] = useState({});
    const chatEndRef = useRef(null);
    const [imageFile, setImageFile] = useState(null);
    
    const [apiKey, setApiKey] = useState('');
    const [userFirebaseConfig, setUserFirebaseConfig] = useState(null);

    // Main initialization effect.
    useEffect(() => {
        const initialize = async () => {
            try {
                // Step 1: Load settings from localStorage first. This is synchronous.
                const savedApiKey = localStorage.getItem('gemini-api-key') || '';
                const savedConfigString = localStorage.getItem('user-firebase-config');
                
                let userConfig = null;
                if (savedConfigString) {
                    userConfig = JSON.parse(savedConfigString);
                }

                if (!userConfig || !userConfig.projectId) {
                    setUserFirebaseConfig(emptyFirebaseConfig);
                    setError("Welcome! To get started, please go to Settings and enter your Firebase configuration.");
                    setAppState('needs_config'); return;
                }

                // We have settings! Update state.
                setApiKey(savedApiKey);
                setUserFirebaseConfig(userConfig);

                // Step 2: Initialize user's personal workspace using their settings
                const appName = `user-workspace-${userConfig.projectId}`; // Use a stable identifier
                const userApp = getApps().find(app => app.name === appName) || initializeApp(userConfig, appName);
                
                const auth = getAuth(userApp);
                const localUserDb = getFirestore(userApp);
                const localUserStorage = getStorage(userApp);
                
                setUserDb(localUserDb);
                setUserStorage(localUserStorage);
                
                // Step 3: Ensure user is signed in to their own Firebase project
                await new Promise((resolve, reject) => {
                    const unsubscribe = onAuthStateChanged(auth, (user) => {
                        if (user) {
                            unsubscribe();
                            setUserId(user.uid);
                            resolve(user);
                        } else {
                            signInAnonymously(auth).catch(reject);
                        }
                    });
                });
                
                // Step 4: All connections are ready.
                setError(null);
                setAppState('ready');

            } catch (err) {
                console.error("Initialization failed:", err);
                setError(`A critical error occurred during startup: ${err.message}. Please check your Firebase settings and refresh.`);
                setAppState('error');
            }
        };

        initialize();
    }, []);

    // Data fetching from USER's database
    useEffect(() => {
        if (appState !== 'ready' || !userDb) return;

        const brainDocRef = doc(userDb, 'brain/singleton');
        const brainUnsub = onSnapshot(brainDocRef, (docSnap) => {
            setBrainData(docSnap.exists() ? { ...emptyBrain, ...docSnap.data() } : emptyBrain);
        }, (err) => console.error("Error fetching brain data from user DB:", err.message));

        const calendarDocRef = doc(userDb, 'contentCalendar/main');
        const calendarUnsub = onSnapshot(calendarDocRef, (docSnap) => {
            setContentCalendarData(docSnap.exists() ? docSnap.data() : {});
        }, (err) => console.error("Error fetching calendar data from user DB:", err.message));

        return () => { brainUnsub(); calendarUnsub(); };
    }, [appState, userDb]);

    // Chat history fetching from USER's database
    useEffect(() => {
        if (appState !== 'ready' || !userDb || !selectedAgent) {
            setChatHistory([]); return;
        };

        const chatDocRef = doc(userDb, `chats/${selectedAgent.id}`);
        const unsubscribe = onSnapshot(chatDocRef, (docSnap) => {
            if (docSnap.exists()) {
                const data = docSnap.data();
                setChatHistory(data.messages || []);
                setSharedScratchpad(data.scratchpad || {});
            } else {
                setChatHistory([]); setSharedScratchpad({});
            }
        }, (err) => console.error("Error fetching chat history from user DB:", err.message));
        return () => unsubscribe();
    }, [appState, userDb, selectedAgent]);

    const scrollToBottom = () => chatEndRef.current?.scrollIntoView({ behavior: "smooth" });
    useEffect(scrollToBottom, [chatHistory]);

    const handleSaveBrain = async (data) => {
        if (appState !== 'ready' || !userDb) {
            setError("Cannot save. Not fully connected to your workspace.");
            return;
        }
        try {
            const brainDocRef = doc(userDb, 'brain/singleton');
            await setDoc(brainDocRef, data, { merge: true });
        } catch (e) {
            console.error("Error saving brain data:", e);
            setError(`Failed to save Brain AI data: ${e.message}`);
        }
    };

    const callImagenAPI = useCallback(async (prompt) => {
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/imagen-3.0-generate-002:predict?key=${apiKey}`;
        const payload = { instances: [{ prompt: prompt }], parameters: { "sampleCount": 1 } };
        const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });
        if (!response.ok) throw new Error(`Image API request failed with status ${response.status}`);
        const result = await response.json();
        const base64Data = result.predictions?.[0]?.bytesBase64Encoded;
        if (!base64Data) throw new Error("No image data in API response.");
        return `data:image/png;base64,${base64Data}`;
    }, [apiKey]);

    const callGeminiAPI = useCallback(async (systemPrompt, userPrompt, history = [], image = null) => {
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
        
        const model = "gemini-2.5-flash-preview-05-20";
        let fullHistory = [];
        if(systemPrompt){
            fullHistory.push({ role: 'system', parts: [{ text: systemPrompt }]});
        }
        fullHistory = fullHistory.concat(history.map(item => ({ role: item.role, parts: [{ text: item.content }] })));

        const userParts = [{ text: userPrompt }];
        if (image) {
            userParts.push({ inlineData: { mimeType: image.type, data: image.data }});
        }
        fullHistory.push({ role: 'user', parts: userParts });

        const payload = {
            contents: fullHistory.filter(item => item.role !== 'system'), // Omit system for this API
            systemInstruction: fullHistory.find(item => item.role === 'system'),
            tools: [{ "google_search": {} }],
        };
        
        if (selectedAgent?.id === 'orchestrator') {
             payload.generationConfig = {
                responseMimeType: "application/json",
                responseSchema: {
                    type: "OBJECT",
                    properties: {
                        steps: {
                            type: "ARRAY",
                            items: {
                                type: "OBJECT",
                                properties: {
                                    agent_id: { type: "STRING" },
                                    task: { type: "STRING" },
                                    output_key: { type: "STRING" },
                                },
                                required: ["agent_id", "task", "output_key"]
                            }
                        }
                    }
                }
            }
        }

        const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });
        if (!response.ok) {
            const errorBody = await response.text();
            throw new Error(`API request failed with status ${response.status}: ${errorBody}`);
        }
        const result = await response.json();
        const text = result.candidates?.[0]?.content?.parts?.[0]?.text;
        if (!text) throw new Error("No text in API response.");
        return text;
    }, [selectedAgent, apiKey]);
    
    const getSystemPrompt = (agent, scratchpad) => {
        const scratchpadString = Object.keys(scratchpad).length > 0
            ? `\n\n**Shared Scratchpad (Context from other agents):**\n${Object.entries(scratchpad).map(([key, value]) => `- ${key}: ${value}`).join('\n')}`
            : '';

        const brainString = Object.entries(brainData)
            .filter(([, value]) => value)
            .map(([key, value]) => `${key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase())}: ${value}`)
            .join(', ');

        return `You are ${agent.name}. Your role is: "${agent.role}". 
        Here is a comprehensive overview of the business you are assisting, use it to tailor your responses.
        Business Context: ${brainString || 'No business information provided yet.'}
        ${scratchpadString}
        
        You must act as your defined role and use the business information to tailor all your responses. Do not break character. Be helpful, concise, and professional.`;
    };

    const runOrchestration = useCallback(async (goal, saveMessage, updateScratchpad) => {
        const validAgentIds = AGENT_CATEGORIES.flatMap(c => c.agents).filter(a => a.id !== 'orchestrator').map(a => a.id).join(', ');
        
        const fewShotExample = `
        **Example:**
        User Goal: "complete an seo and copy analysis on https://westcoast.com"
        
        JSON Output:
        {
          "steps": [
            {
              "agent_id": "seo",
              "task": "Perform a comprehensive SEO analysis on the website https://westcoast.com. Focus on on-page SEO, keyword opportunities, and backlink profile.",
              "output_key": "seo_analysis_results"
            },
            {
              "agent_id": "copywriter",
              "task": "Analyze the copywriting on the homepage of https://westcoast.com. Evaluate its effectiveness, tone of voice, and clarity of its call to action.",
              "output_key": "copy_analysis_results"
            }
          ]
        }`;

        const plannerPrompt = `You are a project planner. Your job is to analyze the user's goal and decompose it into a series of discrete steps that can be executed by other specialist agents.
Your output MUST be a JSON object that follows the provided schema.

**Agent Capabilities Guide:**
- For tasks related to SEO, keywords, or Google rankings, use agent_id 'seo'.
- For tasks related to writing copy, emails, ads, or analyzing text for tone, use agent_id 'copywriter'.
- For tasks related to high-level business strategy, SWOT analysis, or market positioning, use agent_id 'strategist'.
- For any other agent, refer to their role to determine the correct agent_id.

**Instructions:**
1.  Analyze the user's goal.
2.  If the goal involves multiple distinct tasks (e.g., "SEO and copy analysis"), you MUST create a separate step for each task in the JSON "steps" array.
3.  Each step must have a clear, actionable "task" for the designated agent.
4.  Each step must have a unique "output_key".

${fewShotExample}

IMPORTANT: Your response MUST contain ONLY the valid JSON object and nothing else. Do not add any conversational text or markdown.

Valid agent_ids are: ${validAgentIds}.

User Goal: "${goal}"`;
        let plan;
        try {
            const planSystemPrompt = getSystemPrompt(selectedAgent, {});
            const planResponse = await callGeminiAPI(planSystemPrompt, plannerPrompt);
            
            const jsonMatch = planResponse.match(/\{[\s\S]*\}/);
            if (jsonMatch && jsonMatch[0]) {
                plan = JSON.parse(jsonMatch[0]);
            } else {
                 throw new Error("No valid JSON object found in the AI's response.");
            }

            await saveMessage({ role: 'model', content: `**Project Plan Created:**\nI will now execute the following steps:\n${plan.steps.map((s, i) => `${i+1}. **${AGENT_CATEGORIES.flatMap(c => c.agents).find(a=>a.id === s.agent_id)?.name}:** ${s.task}`).join('\n')}`, timestamp: new Date() });
        } catch (e) {
            console.error("Failed to create plan:", e);
            await saveMessage({ role: 'model', content: `I'm sorry, I couldn't create a valid plan. Please try rephrasing your goal. Details: ${e.message}`, timestamp: new Date() });
            return;
        }

        let currentScratchpad = {};
        for (const step of plan.steps) {
            const agent = AGENT_CATEGORIES.flatMap(c => c.agents).find(a => a.id === step.agent_id);
            if (!agent) continue;
            await saveMessage({ role: 'model', content: `*Executing Step: Delegating to ${agent.name}...*`, timestamp: new Date() });
            try {
                const agentSystemPrompt = getSystemPrompt(agent, currentScratchpad);
                const result = await callGeminiAPI(agentSystemPrompt, step.task);
                currentScratchpad[step.output_key] = result;
                await updateScratchpad(step.output_key, result);
                await saveMessage({ role: 'model', content: `**${agent.name} completed the task.**\n\n*Result for "${step.output_key}":*\n${result}`, timestamp: new Date() });
            } catch (e) {
                await saveMessage({ role: 'model', content: `*Execution failed for step with ${agent.name}. Aborting project.*`, timestamp: new Date() });
                return;
            }
        }
        
        const calendarKeys = ['monday_content', 'tuesday_content', 'wednesday_content', 'thursday_content', 'friday_content', 'saturday_content', 'sunday_content'];
        const isCalendarPlan = plan.steps.some(s => calendarKeys.includes(s.output_key));
        if (isCalendarPlan) {
            const calendarDocRef = doc(userDb, 'contentCalendar/main');
            const calendarUpdate = {};
            calendarKeys.forEach(key => {
                if(currentScratchpad[key]) {
                    calendarUpdate[key.split('_')[0]] = currentScratchpad[key];
                }
            });
            await setDoc(calendarDocRef, calendarUpdate, { merge: true });
            await saveMessage({ role: 'model', content: `*Content Calendar has been updated with the results of this plan.*`, timestamp: new Date() });
        }

        const summaryPrompt = `The project is complete. All steps have been executed and the results are in the Shared Scratchpad. Provide a final summary of the project and its outcomes for the user.`;
        const summarySystemPrompt = getSystemPrompt(selectedAgent, currentScratchpad);
        const finalSummary = await callGeminiAPI(summarySystemPrompt, summaryPrompt);
        await saveMessage({ role: 'model', content: `**Project Complete!**\n\n${finalSummary}`, timestamp: new Date() });
    }, [userDb, selectedAgent, getSystemPrompt, callGeminiAPI]);

    const handleSendMessage = useCallback(async (message, toolPrompt = null, imageFile = null) => {
        if (appState !== 'ready') {
            setError("Cannot send message. Not fully connected to your workspace.");
            return;
        }
        if (!apiKey) {
            setError("Please set your API key in Settings before using Power-Ups or generating images.");
            return;
        }

        const userMessageContent = toolPrompt || message;
        if (!userMessageContent.trim() && !imageFile) return;

        setIsLoading(true);
        setError(null);
        
        const currentImageFile = imageFile;
        setImageFile(null); 

        const chatDocRef = doc(userDb, `chats/${selectedAgent.id}`);
        const saveMessage = async (msg) => {
            await updateDoc(chatDocRef, { messages: arrayUnion(msg) }).catch(async (err) => {
                if (err.code === 'not-found') await setDoc(chatDocRef, { messages: [msg], scratchpad: {} });
            });
        };
        const updateScratchpad = async (key, value) => {
             const chatDocRef = doc(userDb, `chats/${selectedAgent.id}`);
            await updateDoc(chatDocRef, { [`scratchpad.${key}`]: value });
        };
        
        let imageForHistory = null;
        let imageForApi = null;
        if (currentImageFile) {
            const reader = new FileReader();
            await new Promise((resolve, reject) => {
                reader.onload = (e) => {
                    const base64Data = e.target.result.split(',')[1];
                    imageForHistory = e.target.result;
                    imageForApi = { type: currentImageFile.type, data: base64Data };
                    resolve();
                };
                reader.onerror = reject;
                reader.readAsDataURL(currentImageFile);
            });
        }

        await saveMessage({ role: 'user', content: userMessageContent, image: imageForHistory, timestamp: new Date() });

        if (selectedAgent.id === 'orchestrator') {
            await runOrchestration(userMessageContent, saveMessage, updateScratchpad);
        } else if (selectedAgent.id === 'artist') {
             try {
                const imageDataUrl = await callImagenAPI(userMessageContent);
                const imageRef = ref(userStorage, `generated_images/vivid-${Date.now()}.png`);
                await uploadString(imageRef, imageDataUrl, 'data_url');
                const permanentUrl = await getDownloadURL(imageRef);
                await saveMessage({ role: 'model', content: permanentUrl, type: 'image', timestamp: new Date() });
            } catch (err) {
                console.error("Error in image generation:", err);
                await saveMessage({ role: 'model', content: `Sorry, I couldn't generate an image: ${err.message}`, timestamp: new Date() });
            }
        }
        else {
            try {
                const systemPrompt = getSystemPrompt(selectedAgent, sharedScratchpad);
                const botResponseContent = await callGeminiAPI(systemPrompt, userMessageContent, chatHistory, imageForApi);
                await saveMessage({ role: 'model', content: botResponseContent, timestamp: new Date() });
            } catch (err) {
                console.error("Error in handleSendMessage:", err);
                await saveMessage({ role: 'model', content: `Sorry, I encountered an error: ${err.message}`, timestamp: new Date() });
            }
        }
        setIsLoading(false);
    }, [appState, apiKey, userDb, selectedAgent, chatHistory, brainData, sharedScratchpad, userStorage, callGeminiAPI, callImagenAPI, runOrchestration]);

    
    const navigateTo = (view, agent = null) => {
        setSelectedAgent(agent);
        setCurrentView(view);
        if(appState === 'ready') setError(null);
    };

    if (appState === 'initializing') {
        return <div className="w-full h-screen flex items-center justify-center bg-gray-900 text-white"><div className="animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-indigo-500"></div></div>;
    }

    return (
        <div className="bg-gray-900 text-white min-h-screen font-sans flex flex-col md:flex-row">
            <Sidebar navigateTo={navigateTo} currentView={currentView} userId={userId} />
            <main className="flex-1 p-4 sm:p-6 md:p-8 overflow-hidden">
                {error && <div className="bg-red-500/20 border border-red-500 text-red-300 p-3 rounded-lg mb-4">{error}</div>}
                
                {(appState === 'needs_config' || appState === 'error') && currentView !== 'settings' && (
                    <div className="text-center mt-10">
                        <h2 className="text-2xl font-bold">Welcome to your AI Workspace</h2>
                        <p className="text-gray-400 mt-2">Please navigate to the Settings page to configure your workspace.</p>
                    </div>
                )}

                {appState === 'ready' && currentView === 'dashboard' && <Dashboard onSelectAgent={(agent) => navigateTo('chat', agent)} />}
                {appState === 'ready' && currentView === 'brain' && <BrainSettings initialData={brainData} onSave={handleSaveBrain} navigateTo={navigateTo} />}
                {appState === 'ready' && currentView === 'calendar' && <ContentCalendarView calendarData={contentCalendarData} />}
                {currentView === 'settings' && <SettingsView apiKey={apiKey} firebaseConfig={userFirebaseConfig || emptyFirebaseConfig} />}
                {appState === 'ready' && currentView === 'chat' && selectedAgent && <ChatView agent={selectedAgent} history={chatHistory} onSendMessage={handleSendMessage} isLoading={isLoading} chatEndRef={chatEndRef} scratchpad={sharedScratchpad} imageFile={imageFile} setImageFile={setImageFile} />}
            </main>
        </div>
    );
}

// --- Sub-components ---

const Sidebar = ({ navigateTo, currentView, userId }) => (
    <nav className="bg-gray-900/80 backdrop-blur-sm border-b md:border-b-0 md:border-r border-gray-700 p-4 md:w-64 flex-shrink-0">
        <h1 className="text-2xl font-bold text-indigo-400 mb-2">AI Workspace</h1>
        {userId && <p className="text-xs text-gray-400 mb-6 truncate" title={userId}>User ID: {userId}</p>}

        <ul>
            <li className={`mb-2`}>
                <button onClick={() => navigateTo('dashboard')} className={`w-full text-left p-3 rounded-lg flex items-center gap-3 transition-colors ${currentView === 'dashboard' ? 'bg-indigo-500/20 text-indigo-300' : 'hover:bg-gray-700/50'}`}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><rect width="7" height="7" x="3" y="3" rx="1" /><rect width="7" height="7" x="14" y="3" rx="1" /><rect width="7" height="7" x="14" y="14" rx="1" /><rect width="7" height="7" x="3" y="14" rx="1" /></svg>
                    Dashboard
                </button>
            </li>
            <li className={`mb-2`}>
                <button onClick={() => navigateTo('brain')} className={`w-full text-left p-3 rounded-lg flex items-center gap-3 transition-colors ${currentView === 'brain' ? 'bg-indigo-500/20 text-indigo-300' : 'hover:bg-gray-700/50'}`}>
                    <BrainIcon />
                    Brain AI
                </button>
            </li>
            <li className={`mb-2`}>
                <button onClick={() => navigateTo('calendar')} className={`w-full text-left p-3 rounded-lg flex items-center gap-3 transition-colors ${currentView === 'calendar' ? 'bg-indigo-500/20 text-indigo-300' : 'hover:bg-gray-700/50'}`}>
                    <CalendarIcon />
                    Content Calendar
                </button>
            </li>
            <li className={`mb-2`}>
                <button onClick={() => navigateTo('settings')} className={`w-full text-left p-3 rounded-lg flex items-center gap-3 transition-colors ${currentView === 'settings' ? 'bg-indigo-500/20 text-indigo-300' : 'hover:bg-gray-700/50'}`}>
                    <CogIcon />
                    Settings
                </button>
            </li>
        </ul>
    </nav>
);

const Dashboard = ({ onSelectAgent }) => {
    return (
    <div>
        <h2 className="text-3xl font-bold mb-2 text-gray-200">Your AI Team</h2>
        <p className="text-gray-400 mb-8">Select an agent to start working. Orion can manage projects for the whole team.</p>
        <div className="space-y-8">
        {AGENT_CATEGORIES.map(category => (
            <div key={category.name}>
                <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">{category.name}</h3>
                <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {category.agents.map(agent => (
                        <button key={agent.id} onClick={() => onSelectAgent(agent)} className="bg-gray-800/50 border border-gray-700 p-6 rounded-xl text-left transition-all group focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 hover:border-indigo-500">
                            <div className="flex items-center gap-4 mb-3">
                                <div className="w-12 h-12 rounded-full flex items-center justify-center text-white" style={{backgroundColor: agent.color}}>{agent.icon}</div>
                                <h3 className="text-xl font-bold text-gray-100">{agent.name}</h3>
                            </div>
                            <p className="text-gray-400">{agent.description}</p>
                        </button>
                    ))}
                </div>
            </div>
        ))}
        </div>
    </div>
)};

const ContentCalendarView = ({ calendarData }) => {
    const days = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'];
    return (
      <div>
        <h2 className="text-3xl font-bold mb-2 text-gray-200">Content Calendar</h2>
        <p className="text-gray-400 mb-8">This calendar is populated by Orion's "Plan a week of content" Power-Up.</p>
        <div className="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-7 gap-4">
          {days.map(day => (
            <div key={day} className="bg-gray-800/50 border border-gray-700 rounded-lg p-4">
              <h3 className="font-bold text-lg capitalize text-indigo-300 mb-2">{day}</h3>
              <div className="text-sm text-gray-300 whitespace-pre-wrap">
                {calendarData[day] ? calendarData[day] : <p className="text-gray-500">No content planned.</p>}
              </div>
            </div>
          ))}
        </div>
      </div>
    );
};


const BrainSettings = ({ initialData, onSave, navigateTo }) => {
    const [formData, setFormData] = useState(initialData);
    const [showSuccess, setShowSuccess] = useState(false);
    useEffect(() => setFormData(initialData), [initialData]);
    const handleChange = (e) => setFormData(prev => ({ ...prev, [e.target.name]: e.target.value }));
    const handleSubmit = (e) => {
        e.preventDefault();
        onSave(formData);
        setShowSuccess(true);
        setTimeout(() => setShowSuccess(false), 3000);
    };
    return (
        <div className="h-full overflow-y-auto pr-2">
            <h2 className="text-3xl font-bold mb-2 text-gray-200">Brain AI Configuration</h2>
            <p className="text-gray-400 mb-8">Teach the AI about your business. This context will be used by all agents.</p>
            <form onSubmit={handleSubmit} className="max-w-3xl space-y-10">
                {/* Core Identity */}
                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Core Identity</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="businessName" className="block text-sm font-medium text-gray-300 mb-2">Business Name</label><input type="text" name="businessName" id="businessName" value={formData.businessName || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" /></div>
                        <div><label htmlFor="targetAudience" className="block text-sm font-medium text-gray-300 mb-2">Target Audience (Demographics)</label><textarea name="targetAudience" id="targetAudience" value={formData.targetAudience || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="audiencePsychology" className="block text-sm font-medium text-gray-300 mb-2">Target Audience (Psychology)</label><textarea name="audiencePsychology" id="audiencePsychology" value={formData.audiencePsychology || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Pain points, fears, aspirations..."></textarea></div>
                        <div><label htmlFor="brandVoice" className="block text-sm font-medium text-gray-300 mb-2">Brand Voice / Tone</label><input type="text" name="brandVoice" id="brandVoice" value={formData.brandVoice || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" /></div>
                        <div><label htmlFor="brandVoiceExamples" className="block text-sm font-medium text-gray-300 mb-2">Brand Voice in Action</label><textarea name="brandVoiceExamples" id="brandVoiceExamples" value={formData.brandVoiceExamples || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Phrases to use/avoid..."></textarea></div>
                    </div>
                </div>
                 {/* Program Development & Pedagogy */}
                 <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Program Development & Pedagogy</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="teachingPhilosophy" className="block text-sm font-medium text-gray-300 mb-2">Teaching Philosophy/Methodology</label><textarea name="teachingPhilosophy" id="teachingPhilosophy" value={formData.teachingPhilosophy || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Hands-on, safety-first, fun and social..."></textarea></div>
                        <div><label htmlFor="customerProgressionPath" className="block text-sm font-medium text-gray-300 mb-2">Ideal Customer Progression Path</label><textarea name="customerProgressionPath" id="customerProgressionPath" value={formData.customerProgressionPath || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Describe the ideal learning journey from beginner to expert..."></textarea></div>
                        <div><label htmlFor="availableEquipment" className="block text-sm font-medium text-gray-300 mb-2">Available Equipment & Resources</label><textarea name="availableEquipment" id="availableEquipment" value={formData.availableEquipment || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="List specific equipment, locations, or unique resources..."></textarea></div>
                    </div>
                </div>
                 {/* Sales & Operations */}
                 <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Sales & Operations</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="salesProcessOffers" className="block text-sm font-medium text-gray-300 mb-2">Sales Process & Offers</label><textarea name="salesProcessOffers" id="salesProcessOffers" value={formData.salesProcessOffers || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Standard discount offers, typical sales cycle..."></textarea></div>
                        <div><label htmlFor="negotiationParameters" className="block text-sm font-medium text-gray-300 mb-2">Negotiation Parameters</label><textarea name="negotiationParameters" id="negotiationParameters" value={formData.negotiationParameters || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Non-negotiable points, acceptable discount ranges..."></textarea></div>
                     </div>
                </div>
                {/* Marketing & Product */}
                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Marketing & Product Details</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="productsServices" className="block text-sm font-medium text-gray-300 mb-2">Products/Services Offered (General)</label><textarea name="productsServices" id="productsServices" value={formData.productsServices || ''} onChange={handleChange} rows="4" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="programCatalog" className="block text-sm font-medium text-gray-300 mb-2">Program Catalog</label><textarea name="programCatalog" id="programCatalog" value={formData.programCatalog || ''} onChange={handleChange} rows="4" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="List programs and their differentiators..."></textarea></div>
                        <div><label htmlFor="usp" className="block text-sm font-medium text-gray-300 mb-2">Unique Selling Proposition (USP)</label><textarea name="usp" id="usp" value={formData.usp || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="keywords" className="block text-sm font-medium text-gray-300 mb-2">Keywords & Core Topics</label><input type="text" name="keywords" id="keywords" value={formData.keywords || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" /></div>
                        <div><label htmlFor="contentPillars" className="block text-sm font-medium text-gray-300 mb-2">Content Pillars & Visual Aesthetics</label><textarea name="contentPillars" id="contentPillars" value={formData.contentPillars || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Brand's visual style..."></textarea></div>
                        <div><label htmlFor="socialMediaTactics" className="block text-sm font-medium text-gray-300 mb-2">Social Media Tactics</label><textarea name="socialMediaTactics" id="socialMediaTactics" value={formData.socialMediaTactics || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Goal of a typical post..."></textarea></div>
                        <div><label htmlFor="emailMarketingGoal" className="block text-sm font-medium text-gray-300 mb-2">Primary Email Marketing Goal</label><textarea name="emailMarketingGoal" id="emailMarketingGoal" value={formData.emailMarketingGoal || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Drive direct bookings, build community..."></textarea></div>
                        <div><label htmlFor="newSubscriberOffer" className="block text-sm font-medium text-gray-300 mb-2">New Subscriber Offer / Lead Magnet</label><textarea name="newSubscriberOffer" id="newSubscriberOffer" value={formData.newSubscriberOffer || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., 10% discount, free PDF guide..."></textarea></div>
                        <div><label htmlFor="seasonalPromotions" className="block text-sm font-medium text-gray-300 mb-2">Seasonal Promotions & Key Dates</label><textarea name="seasonalPromotions" id="seasonalPromotions" value={formData.seasonalPromotions || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Victoria Day kickoff, Fall Colors tour..."></textarea></div>
                        <div><label htmlFor="quarterlyContentThemes" className="block text-sm font-medium text-gray-300 mb-2">Quarterly Content Themes</label><textarea name="quarterlyContentThemes" id="quarterlyContentThemes" value={formData.quarterlyContentThemes || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Theme 1: Safety for beginners..."></textarea></div>
                    </div>
                </div>
                {/* Strategy & Financials */}
                <div>
                     <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Strategy & Financials</h3>
                     <div className="space-y-6 mt-4">
                        <div><label htmlFor="businessGoals" className="block text-sm font-medium text-gray-300 mb-2">Primary Business Goals (Qualitative)</label><textarea name="businessGoals" id="businessGoals" value={formData.businessGoals || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="businessGoalsQuantitative" className="block text-sm font-medium text-gray-300 mb-2">Primary Business Goals (Quantitative)</label><textarea name="businessGoalsQuantitative" id="businessGoalsQuantitative" value={formData.businessGoalsQuantitative || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Target revenue/participants..."></textarea></div>
                        <div><label htmlFor="longTermVision" className="block text-sm font-medium text-gray-300 mb-2">Long-Term Vision (3-5 Years)</label><textarea name="longTermVision" id="longTermVision" value={formData.longTermVision || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Become the leading provider..."></textarea></div>
                        <div><label htmlFor="biggestBusinessChallenges" className="block text-sm font-medium text-gray-300 mb-2">Biggest Business Challenges</label><textarea name="biggestBusinessChallenges" id="biggestBusinessChallenges" value={formData.biggestBusinessChallenges || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Limited number of guides, off-season marketing..."></textarea></div>
                        <div><label htmlFor="competitors" className="block text-sm font-medium text-gray-300 mb-2">Main Competitors</label><textarea name="competitors" id="competitors" value={formData.competitors || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="competitiveAdvantage" className="block text-sm font-medium text-gray-300 mb-2">Competitive Advantage</label><textarea name="competitiveAdvantage" id="competitiveAdvantage" value={formData.competitiveAdvantage || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="pricingStructure" className="block text-sm font-medium text-gray-300 mb-2">Pricing Structure</label><textarea name="pricingStructure" id="pricingStructure" value={formData.pricingStructure || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                        <div><label htmlFor="customerJourney" className="block text-sm font-medium text-gray-300 mb-2">Customer Journey</label><textarea name="customerJourney" id="customerJourney" value={formData.customerJourney || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Key touchpoints to booking..."></textarea></div>
                    </div>
                </div>
                {/* Operational & Financial Metrics */}
                 <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Operational & Financial Metrics</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="avgCostPerProgram" className="block text-sm font-medium text-gray-300 mb-2">Average Cost Per Program</label><textarea name="avgCostPerProgram" id="avgCostPerProgram" value={formData.avgCostPerProgram || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Estimated variable costs per person/program..."></textarea></div>
                        <div><label htmlFor="customerAcquisitionCost" className="block text-sm font-medium text-gray-300 mb-2">Customer Acquisition Cost (CAC)</label><input type="text" name="customerAcquisitionCost" id="customerAcquisitionCost" value={formData.customerAcquisitionCost || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., $25 per new booking" /></div>
                        <div><label htmlFor="monthlyFixedCosts" className="block text-sm font-medium text-gray-300 mb-2">Monthly Fixed Costs</label><input type="text" name="monthlyFixedCosts" id="monthlyFixedCosts" value={formData.monthlyFixedCosts || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Insurance, software, storage fees..." /></div>
                    </div>
                </div>
                {/* Data & Analytics */}
                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Data & Analytics</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="bookingConversionData" className="block text-sm font-medium text-gray-300 mb-2">Booking & Conversion Data</label><textarea name="bookingConversionData" id="bookingConversionData" value={formData.bookingConversionData || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Website conversion rate..."></textarea></div>
                        <div><label htmlFor="customerData" className="block text-sm font-medium text-gray-300 mb-2">Customer Data</label><textarea name="customerData" id="customerData" value={formData.customerData || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="How you measure satisfaction, LTV..."></textarea></div>
                        <div><label htmlFor="performanceMetrics" className="block text-sm font-medium text-gray-300 mb-2">Performance Metrics (KPIs)</label><textarea name="performanceMetrics" id="performanceMetrics" value={formData.performanceMetrics || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" ></textarea></div>
                    </div>
                </div>
                {/* SEO & Website Details */}
                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">SEO & Website Details</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="websiteUrl" className="block text-sm font-medium text-gray-300 mb-2">Website/Blog URL</label><input type="text" name="websiteUrl" id="websiteUrl" value={formData.websiteUrl || ''} onChange={handleChange} className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="https://www.example.com" /></div>
                        <div><label htmlFor="businessLocation" className="block text-sm font-medium text-gray-300 mb-2">Business Location / Service Area</label><textarea name="businessLocation" id="businessLocation" value={formData.businessLocation || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., 123 Main St, Vancouver, BC or The Greater Vancouver Area"></textarea></div>
                        <div><label htmlFor="targetSearchCompetitors" className="block text-sm font-medium text-gray-300 mb-2">Target Search Competitors</label><textarea name="targetSearchCompetitors" id="targetSearchCompetitors" value={formData.targetSearchCompetitors || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Websites that rank for your target keywords..."></textarea></div>
                        <div><label htmlFor="contentStrategyFocus" className="block text-sm font-medium text-gray-300 mb-2">Content Strategy Focus</label><textarea name="contentStrategyFocus" id="contentStrategyFocus" value={formData.contentStrategyFocus || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Educate beginners, attract experienced clients..."></textarea></div>
                    </div>
                </div>
                 {/* Customer Support Policies */}
                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Customer Support Policies</h3>
                    <div className="space-y-6 mt-4">
                        <div><label htmlFor="faq" className="block text-sm font-medium text-gray-300 mb-2">Frequently Asked Questions (FAQ)</label><textarea name="faq" id="faq" value={formData.faq || ''} onChange={handleChange} rows="4" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="List your top 5-10 FAQs..."></textarea></div>
                        <div><label htmlFor="refundPolicy" className="block text-sm font-medium text-gray-300 mb-2">Refund/Cancellation Policy</label><textarea name="refundPolicy" id="refundPolicy" value={formData.refundPolicy || ''} onChange={handleChange} rows="3" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Describe your official policy..."></textarea></div>
                        <div><label htmlFor="supportTone" className="block text-sm font-medium text-gray-300 mb-2">Customer Support Tone</label><textarea name="supportTone" id="supportTone" value={formData.supportTone || ''} onChange={handleChange} rows="2" className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Extremely patient, quick and efficient..."></textarea></div>
                    </div>
                </div>
                <div className="flex gap-4 pt-4 items-center">
                    <button type="submit" className="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Save Brain</button>
                    <button type="button" onClick={() => navigateTo('dashboard')} className="bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Back to Dashboard</button>
                    {showSuccess && <span className="text-green-400">Brain AI updated!</span>}
                </div>
            </form>
        </div>
    );
};

const SettingsView = ({ apiKey, firebaseConfig }) => {
    const [localApiKey, setLocalApiKey] = useState(apiKey);
    const [configString, setConfigString] = useState(JSON.stringify(firebaseConfig, null, 2));
    const [showSuccess, setShowSuccess] = useState(false);
    const [error, setError] = useState('');

    useEffect(() => { 
        if (firebaseConfig) {
            setConfigString(JSON.stringify(firebaseConfig, null, 2));
        }
    }, [firebaseConfig]);
    useEffect(() => { setLocalApiKey(apiKey); }, [apiKey]);

    const handleSave = () => {
        setError('');
        let parsedConfig;
        try {
            parsedConfig = JSON.parse(configString);
            if (!parsedConfig.projectId) throw new Error("Config must have a 'projectId'.");
        } catch(e) {
            setError(`Invalid Firebase Config format. Make sure it's valid JSON. Details: ${e.message}`);
            return;
        }

        try {
            localStorage.setItem('gemini-api-key', localApiKey);
            localStorage.setItem('user-firebase-config', JSON.stringify(parsedConfig));
            setShowSuccess(true);
            setTimeout(() => { window.location.reload(); }, 2000);
        } catch (err) {
            console.error("Error saving settings to localStorage:", err);
            setError("Failed to save settings to your browser's local storage.");
        }
    };

    return (
        <div>
            <h2 className="text-3xl font-bold mb-2 text-gray-200">Settings</h2>
            <p className="text-gray-400 mb-8">Manage API Keys and Firebase configuration for your account.</p>
            
            <div className="max-w-2xl space-y-10">
                 <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">API Keys</h3>
                    <div className="space-y-4 mt-4">
                        <div>
                            <label htmlFor="apiKey" className="block text-sm font-medium text-gray-300 mb-2">Google AI Studio API Key</label>
                            <input 
                                type="password" 
                                id="apiKey"
                                value={localApiKey}
                                onChange={(e) => setLocalApiKey(e.target.value)}
                                placeholder="Enter your Gemini API key..."
                                className="w-full bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500"
                            />
                            <p className="text-xs text-gray-500 mt-2">Your key is stored in this browser's local storage.</p>
                        </div>
                        <div>
                            <h3 className="text-lg font-semibold text-gray-300 mt-6 mb-2">How to get a Gemini API Key:</h3>
                            <ol className="list-decimal list-inside text-gray-400 space-y-1 text-sm">
                                <li>Go to <a href="https://aistudio.google.com/" target="_blank" rel="noopener noreferrer" className="text-indigo-400 hover:underline">Google AI Studio</a>.</li>
                                <li>Click on the "Get API Key" button.</li>
                                <li>Create a new project if prompted.</li>
                                <li>Copy your generated API key and paste it above.</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <div>
                    <h3 className="text-xl font-semibold text-indigo-300 mb-4 border-b border-indigo-500/30 pb-2">Firebase Configuration</h3>
                    <p className="text-sm text-gray-400 mt-4 mb-4">Provide your own Firebase project configuration. This allows you to connect to your own private workspace. Paste the JSON config object below.</p>
                    <textarea 
                        id="firebaseConfig"
                        value={configString}
                        onChange={(e) => setConfigString(e.target.value)}
                        rows="10"
                        className="w-full bg-gray-900 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm"
                        placeholder='{ "apiKey": "AIza...", "authDomain": "...", ... }'
                    />
                </div>

                <div className="flex items-center gap-4 pt-4">
                     <button onClick={handleSave} className="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                        Save All Settings
                    </button>
                    {showSuccess && <span className="text-green-400">Settings saved! The app will now reload...</span>}
                    {error && <span className="text-red-400">{error}</span>}
                </div>
            </div>
        </div>
    );
};

const ChatView = ({ agent, history, onSendMessage, isLoading, chatEndRef, scratchpad, imageFile, setImageFile }) => {
    const [message, setMessage] = useState('');
    const fileInputRef = useRef(null);
    
    const handleSubmit = (e) => {
        e.preventDefault();
        onSendMessage(message, null, imageFile);
        setMessage('');
        setImageFile(null);
    };

    const handleToolClick = (prompt) => {
        onSendMessage('', prompt, null);
    };
    
    const handleImageChange = (e) => {
        if (e.target.files && e.target.files[0]) {
            setImageFile(e.target.files[0]);
        }
    };

    return (
        <div className="flex flex-col h-[calc(100vh-4rem)] md:h-[calc(100vh-4rem)]">
            <div className="flex-shrink-0 border-b border-gray-700 pb-4 mb-4">
                <div className="flex items-center gap-4">
                    <div className="w-12 h-12 rounded-full flex items-center justify-center text-white" style={{backgroundColor: agent.color}}>{agent.icon}</div>
                    <div>
                        <h2 className="text-2xl font-bold">{agent.name}</h2>
                        <p className="text-gray-400">{agent.role}</p>
                    </div>
                </div>
                <div className="mt-4"><h3 className="text-sm font-semibold text-gray-400 mb-2">Power-Ups</h3><div className="flex flex-wrap gap-2">{agent.tools.map(tool => (<button key={tool.name} onClick={() => handleToolClick(tool.prompt)} className="bg-gray-700 hover:bg-gray-600 text-sm text-gray-200 py-1 px-3 rounded-full transition-colors">{tool.name}</button>))}</div></div>
            </div>

            <div className="flex-1 flex flex-row gap-4 overflow-hidden">
                <div className="flex-1 overflow-y-auto pr-4 -mr-4">
                    <div className="space-y-6">
                        {history.map((item, index) => (
                            <div key={index} className={`flex items-start gap-4 ${item.role === 'user' ? 'justify-end' : ''}`}>
                                {item.role === 'model' && <BotIcon agent={agent} />}
                                <div className={`max-w-lg lg:max-w-2xl px-5 py-3 rounded-2xl ${item.role === 'user' ? 'bg-indigo-600 rounded-br-none' : 'bg-gray-700 rounded-bl-none'}`}>
                                    {item.image && <img src={item.image} alt="Uploaded content" className="rounded-lg mb-2" />}
                                    {item.type === 'image' ? (
                                        <div className="flex flex-col items-start gap-2">
                                            <img src={item.content} alt="Generated content" className="rounded-lg" />
                                            <a href={item.content} target="_blank" rel="noopener noreferrer" download={`ai-generated-image-${index}.png`} className="text-sm text-indigo-400 hover:underline font-semibold flex items-center gap-1">
                                                <DownloadIcon /> Download Image
                                            </a>
                                            <p className="text-xs text-gray-500">Image saved to your workspace storage.</p>
                                        </div>
                                    ) : (
                                        <p className="whitespace-pre-wrap">{item.content}</p>
                                    )}
                                </div>
                                {item.role === 'user' && <div className="w-8 h-8 rounded-full flex items-center justify-center bg-gray-600"><UserIcon /></div>}
                            </div>
                        ))}
                        {isLoading && <div className="flex items-start gap-4"><BotIcon agent={agent} /><div className="max-w-lg px-5 py-3 rounded-2xl bg-gray-700 rounded-bl-none"><div className="flex items-center gap-2"><div className="w-2 h-2 bg-gray-400 rounded-full animate-pulse"></div><div className="w-2 h-2 bg-gray-400 rounded-full animate-pulse [animation-delay:0.2s]"></div><div className="w-2 h-2 bg-gray-400 rounded-full animate-pulse [animation-delay:0.4s]"></div></div></div></div>}
                        <div ref={chatEndRef} />
                    </div>
                </div>

                {agent.id === 'orchestrator' && Object.keys(scratchpad).length > 0 && (
                    <div className="w-1/3 max-w-sm bg-gray-800/50 border border-gray-700 rounded-lg p-4 overflow-y-auto">
                        <h3 className="text-lg font-semibold text-purple-300 mb-3">Shared Scratchpad</h3>
                        <div className="space-y-3 text-sm">
                            {Object.entries(scratchpad).map(([key, value]) => (
                                <div key={key}>
                                    <p className="font-bold text-gray-300">{key}:</p>
                                    <p className="text-gray-400 whitespace-pre-wrap">{value}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                )}
            </div>

            <div className="mt-6 flex-shrink-0">
                {imageFile && (
                    <div className="mb-2 flex items-center gap-2 bg-gray-700/50 p-2 rounded-lg">
                        <ImageIcon />
                        <span className="text-sm truncate">{imageFile.name}</span>
                        <button onClick={() => setImageFile(null)} className="ml-auto text-gray-400 hover:text-white"><XIcon/></button>
                    </div>
                )}
                <form onSubmit={handleSubmit} className="flex items-center gap-2">
                    {agent.id !== 'artist' && (
                         <button type="button" onClick={() => fileInputRef.current.click()} className="p-3 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors">
                            <ImageIcon/>
                        </button>
                    )}
                    <input ref={fileInputRef} type="file" accept="image/*" onChange={handleImageChange} className="hidden" />
                    <input type="text" value={message} onChange={(e) => setMessage(e.target.value)} placeholder={`Message ${agent.name}...`} className="flex-1 bg-gray-800 border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" disabled={isLoading} />
                    <button type="submit" className="bg-indigo-600 hover:bg-indigo-700 text-white font-bold p-3 rounded-lg transition-colors disabled:bg-indigo-900 disabled:cursor-not-allowed" disabled={isLoading || (!message.trim() && !imageFile)}><SendIcon /></button>
                </form>
            </div>
        </div>
    );
};

